<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>51.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>SF PEG Message</masterLabel>

    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__HomePage,lightning__RecordPage">
            <property   name="configTitle"
                        label="Message Title"
                        description="Title for the message (text only)"
                        type="String" />
            <property   name="configMsg"
                        label="Message Content"
                        description="Content of the message (may be richtext)"
                        type="String" />

            <property   name="configIcon"
                        label="Message Icon"
                        description="Optional Message icon name (see SLDS for names)"
                        type="String" />
            <property   name="iconSize"
                        label="Icon Size"
                        type="String" 
                        datasource="xx-small,x-small,small,medium,large"
                        default="small" />
            <property   name="iconVariant"
                        label="Icon Variant"
                        description="Icon variant (for utility icons)"
                        datasource="default,inverse,success,warning,error"
                        default="default"
                        type="String" />

            <property   name="actionConfigName"
                        label="Action Configuration"
                        type="String"
                        datasource="apex://sfpegActionSelector_CTL"
                        description="(Developer)Name of the Action Configuration record to be used (see sfpegAction__mdt)."/>

            <property   name="msgClass"
                        label="Wrapping CSS"
                        description="CSS classes to set on the wrapping component div"
                        type="String"
                        default="slds-box slds-theme_default" />

            <property   name="isDebug"
                        label="Show Debug?"
                        type="Boolean" />
        </targetConfig>
    </targetConfigs>

</LightningComponentBundle>